<view>
  <swiper 
     class="swiper" 
     indicator-dots="true" 
     autoplay="true" 
     interval="3000" 
     duration="1000"
     circular="true"
  >    
      <block wx:for="{{movies}}" wx:for-index="index">    
        <swiper-item>    
          <image src="{{item.url}}" class="slide-image" mode="aspectFill"/>    
        </swiper-item>    
      </block>    
    </swiper>
</view> 