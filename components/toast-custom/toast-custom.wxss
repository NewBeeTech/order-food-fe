.toast_content_box {
  display: flex;
  width: 300rpx;
  height: 100rpx;
  justify-content: center;
  align-items: center;
  position: fixed;
  z-index: 99999;
  top: 40vh;
  left: 225rpx;
}

.toast_content {
  width: 80%;
  padding: 10%;
  background: rgba(0, 0, 0, 0.7);
  border-radius: 20rpx;
}

.toast_content_text {
  width: 100%;
  height: 100%;
  color: #fff;
  font-size: 28rpx;
  text-align: center;
}
